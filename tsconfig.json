{
    "compilerOptions": {
        "target": "es2022",
        "lib": [ "es2022", "DOM" ],
        "module": "es2022",
        "moduleResolution": "node",
        "types": [
            "node"
        ],

        "rootDir": "./src",
        "outDir": "./dist",

        "strict": true,
        "inlineSourceMap": true,
        "noImplicitReturns": true,

        "declaration": true,
        "skipLibCheck": true,

        "sourceMap": false,
    },
    "include": [
        "./src/**/*"
    ]
}
